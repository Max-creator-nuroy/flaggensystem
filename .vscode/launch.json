  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch TS",
      "program": "${workspaceFolder}/server/index.ts",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--loader", "ts-node/register"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/server/tsconfig.json"
      }
    }

    // {
